<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryInfo_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Top_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/library_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="20dp"
            android:text="Library Name"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/library_favourite_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fav"
            android:maxLines="1"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/library_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Top_contents"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:padding="20dp" />

    <LinearLayout
        android:id="@+id/library_buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/library_image"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="left"
            android:text="CheckIn Book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="right"
            android:text="CheckOut Book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <ListView
        android:id="@+id/library_bookListView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/library_buttonsLayout"
        android:clickable="true"
        android:focusable="true"
        />

    <fragment
        android:id="@+id/library_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/library_bookListView"
        tools:context=".LibraryInfo_Activity"
        android:layout_margin="20dp"/>

</RelativeLayout>